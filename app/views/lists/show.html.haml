%h2= @list.name
%p= @list.description

%h3 Incomplete Tasks
%ul#incomplete
  = render @list.tasks.incomplete 
%h3 Completed Tasks
%ul#complete
  = render @list.tasks.completed 


= form_for [@list, @task], :remote => true do |f|
  %p
    ~f.text_field :description, :placeholder => "New to do"
    =f.text_field :tag_list, :placeholder => "Tags"
    ~f.submit
%hr
= link_to "Back to list index", lists_path
