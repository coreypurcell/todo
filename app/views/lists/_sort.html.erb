<%= javascript_tag do %>
     $('#tasks').sortable(
        {
          axis: 'y', 
          dropOnEmpty:false, 
          handle: '.handle', 
          cursor: 'crosshair',
          items: 'li',
          opacity: 0.4,
          scroll: true,
          update: function(){
            $.ajax({
                type: 'post', 
                data: $('#tasks').sortable('serialize') + '&id=<%=@list.id-%>', 
                dataType: 'script', 
                complete: function(request){
                  },
                url: '/lists/prioritize_tasks'})
            }
          })
    <% end %>

